---
layout: layout/layout.njk
site_title: Appblocks - Support
---
<div class="min-h-[calc(100vh-208px)] w-full float-left pt-[72px] md:pt-[80px]">
    <section class="w-full float-left primary-gradient-box">
        <div class="max-w-7xl w-full mx-auto flex items-center min-h-[160px] px-4 md:px-6 py-16 banner-right-icon">
            <div class="w-full float-left">
                <p class="flexa-bold text-white text-3xl md:text-5xl">
                    {{supportData[0].support[0].banner[0].title}}</p>
                <p class="zirkon-regular text-white mt-2 text-2xl">
                    {{supportData[0].support[0].banner[0].desc}}</p>
                <input type="text" placeholder="Search for answers"
                    class="w-full search-input-white max-w-2xl mt-6 border border-ab-gray-medium !leading-tight rounded text-ab-black zirkon-medium focus:border-primary focus:outline-none text-base px-4 pt-3.5 pb-3" />

            </div>
        </div>
    </section>
    <section class="w-full float-left">
        <div class="max-w-7xl w-full mx-auto flex items-center px-4 md:px-6 py-10">
            <div class="w-full grid grid-cols-1 md:grid-cols-[1fr_320px] gap-16">
                {{content | safe}}
                <div class="w-full float-left space-y-4">
                    {% include "partials/support-sidebar.html" %}
                </div>
            </div>
        </div>
    </section>

    {% include "partials/discover-box.html" %}
</div>